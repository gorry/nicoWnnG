<PreferenceScreen
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
					<ListPreference
						app:key="input_mode"
						app:title="@string/preference_input_mode_title"
						app:summary="@string/preference_input_mode_summary"
						app:entries="@array/input_mode_entries"
						app:entryValues="@array/input_mode_values"
						app:defaultValue="input_normal"
						/>
					<PreferenceCategory
						app:title="@string/preference_nicownng_category_flick">
						<ListPreference
							app:key="nicoflick_mode"
							app:title="@string/preference_nicownng_is_flick"
							app:summary="@string/preference_nicownng_is_flick_summary_ja"
							app:entries="@array/flick_entries"
							app:entryValues="@array/flick_values"
							app:defaultValue="0"
							/>
						<ListPreference
							app:key="flick_sensitivity_mode"
							app:title="@string/preference_flick_sensitivity_title"
							app:summary="@string/preference_flick_sensitivity_summary"
							app:entries="@array/flick_sensitivity_entries"
							app:entryValues="@array/flick_sensitivity_values"
							app:defaultValue="2"
							/>
						<CheckBoxPreference
							app:key="flick_guide"
							app:title="@string/preference_nicownng_flick_guide"
							app:summary="@string/preference_nicownng_flick_guide_summary_ja"
							app:defaultValue="true"
							/>
					</PreferenceCategory>
					<PreferenceCategory
						app:title="@string/preference_category_12key_display">
						<CheckBoxPreference
							app:key="use_12key_shift"
							app:title="@string/preference_use_12key_shift_title"
							app:summary="@string/preference_use_12key_shift_summary"
							app:defaultValue="true"
							/>
						<CheckBoxPreference
							app:key="use_12key_subten"
							app:title="@string/preference_use_12key_subten_title"
							app:summary="@string/preference_use_12key_subten_summary"
							app:defaultValue="false"
							/>
						<ListPreference
							app:key="subten_12key_mode2"
							app:title="@string/preference_subten_12key_mode_title"
							app:summary="@string/preference_subten_12key_mode_summary"
							app:entries="@array/preference_subten_12key_mode_entries"
							app:entryValues="@array/preference_subten_12key_mode_values"
							app:defaultValue="0"
							/>
						<CheckBoxPreference
							app:key="no_flip_screen"
							app:title="@string/preference_nicownng_is_flipscreen"
							app:summary="@string/preference_nicownng_is_flipscreen_summary_ja"
							app:defaultValue="false"
							/>
					</PreferenceCategory>
					<PreferenceCategory
						app:title="@string/preference_category_12key_input">
						<CheckBoxPreference
							app:key="change_alphamode"
							app:title="@string/preference_nicownng_change_alphamode"
							app:summary="@string/preference_nicownng_change_alphamode_summary_ja"
							app:defaultValue="false"
							/>
						<CheckBoxPreference
							app:key="english_predict_12key"
							app:title="@string/preference_nicownng_12key_english_predict_title"
							app:summary="@string/preference_nicownng_12key_english_predict_summary"
							app:defaultValue="true"
							/>
						<CheckBoxPreference
							app:key="tsu_du_ltu"
							app:title="@string/preference_nicownng_tsu_du_ltu"
							app:summary="@string/preference_nicownng_tsu_du_ltu_summary_ja"
							app:defaultValue="false"
							/>
						<CheckBoxPreference
							app:key="kana12_space_zen"
							app:title="@string/preference_nicownng_kana12_space_zen"
							app:summary="@string/preference_nicownng_kana12_space_zen_summary_ja"
							app:defaultValue="false"
							/>
						<CheckBoxPreference
							app:key="autoforward_toggle_12key"
							app:title="@string/preference_autoforward_toggle_12key_title"
							app:summary="@string/preference_autoforward_toggle_12key_summary"
							app:defaultValue="true"
							/>
						<CheckBoxPreference
							app:key="symbol_addsymbolemoji_12key"
							app:title="@string/preference_symbol_addsymbolemoji_title"
							app:summary="@string/preference_symbol_addsymbolemoji_summary"
							app:defaultValue="true"
							/>
					</PreferenceCategory>
</PreferenceScreen>
